{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native",
    "flowtype",
    "jsx-a11y",
    "import",
    "prettier",
    "sort-imports-es6-autofix"
  ],
  "extends": [
    "plugin:react-native/all",
    "airbnb",
    "prettier",
    "prettier/flowtype",
    "prettier/react",
    "prettier/standard"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["app"],
        "extensions": [
          ".js"
        ]
      }
    }
  },
  "globals": {
    "GLOBAL": true
  },
  "rules": {
    "global-require": "off",
    "no-use-before-define": "off",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "function-paren-newline": "off",
    "quotes": ["error", "single"],
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [".js"]
      }
    ],
    "import/no-cycle": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "specialLink": ["to"]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ]
  },
  "env": {
    "jest": true
  }
}
